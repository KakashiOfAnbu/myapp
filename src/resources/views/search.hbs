<div class="search-form mt-4 mr-5 ml-5 mb-4">
  <form method="POST">
    <div class="form-group">
      <label for="search-input">Search Movies</label>
      <input
        type="text"
        class="form-control"
        id="search-input"
        name="q"
        placeholder="Enter keywords"
      />
    </div>
    <div class="form-group">
      <label for="search-input">Search Year of Release</label>
      <input
        type="text"
        class="form-control"
        id="search-input"
        name="year"
        placeholder="Enter keywords"
      />
    </div>
    <div class="form-group">
      <label for="search-input">Search Genres</label>
      <input
        type="text"
        class="form-control"
        id="search-input"
        name="genres"
        placeholder="Enter keywords"
      />
    </div>
    <div class="form-group">
      <label for="search-input">Search Genres</label>
      <select
        type="text"
        class="form-control"
        id="gender-input"
        name="gender"
        placeholder="Enter keywords"
      >
        <option value="">Select your gender</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>

    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1" />
      <label class="form-check-label" for="exampleCheck1">I'm felling lucky</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
  </form>
</div>