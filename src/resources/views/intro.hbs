<div class='mt-4 grid-item'>
    <div class='row'>
        <div class='card-group'>
            {{#each songs}}
                <div class='col-sm-6 col-lg-3'>
                    <div class='card bg-light mb-3 text-dark'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='Card image cap'
                        />
                        <div class='card-body'>
                            <h5 class='card-title'>{{this.name}}</h5>
                            <p class='card-text'>{{this.singer}}</p>
                            <a href='#' class='btn btn-primary'>Listen</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>