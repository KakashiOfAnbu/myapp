<form
    name='main-form'
    method='POST'
    action='/cars/handle-form-actions'
    class='mt-4'
>
    <h3>
        My Cars
    </h3>
    {{#if deletedCount}}
        <a href='/me/trash/cars'>Deleted Cars. ( {{deletedCount}} )</a>
    {{/if}}
    <div class='mt-4 d-flex align-items-center'>
        <div class='form-check'>
            <input type='checkbox' class='form-check-input' id='checkbox-all' />
            <label class='form-check-label' for='checkbox-all'>Select All</label>
        </div>
        <select
            class='form-control form-control-sm form-control-action-select'
            name='action'
            required
        >
            <option value=''>-- Select Action --</option>
            <option value='delete'>Delete</option>
        </select>
        <button
            class='btn btn-primary btn-sm'
            id='execute-btn'
            disabled
        >Submit</button>
    </div>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>Select</th>
                <th scope='col'>#</th>
                <th scope='col'>Name</th>
                <th scope='col'>Description</th>
                <th scope='col'>Date Created</th>
                <th scope='col' colspan='2'>Functions</th>
            </tr>
        </thead>
        <tbody>
            {{#each cars}}
                <tr>
                    <td class='checkbox-container'>
                        <div class='form-check'>
                            <input
                                value='{{this._id}}'
                                name='carIds[]'
                                type='checkbox'
                                class='form-check-input'
                            />
                        </div>
                    </td>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.desc}}</td>
                    <td>{{this.createdAt}}</td>
                    <td class='button-list'>
                        <a
                            href='/cars/{{this._id}}/edit'
                            class='btn btn-link'
                        >Edit</a>
                        <a
                            href='#'
                            type='button'
                            class='btn btn-link'
                            data-toggle='modal'
                            data-target='#deleteModal'
                            data-id='{{this._id}}'
                        >Remove</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan='5' class='text-center'>
                        <span>You have no cars you broke ass Bitch. </span>
                        <a href='/cars/add'>Add Cars.</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</form>

<!-- Modal -->
<div
    class='modal fade'
    id='deleteModal'
    tabindex='-1'
    role='dialog'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Delete car</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                Are you sure you want to delete this car ?
            </div>
            <div class='modal-footer'>
                <button
                    id='btn-delete-car'
                    type='button'
                    class='btn btn-primary btn-danger'
                >Delete Car</button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Close</button>
            </div>
        </div>
    </div>
</div>

